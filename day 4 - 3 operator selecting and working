
#include <stdio.h>

int main()
{
char operator;
double num1,num2,result;
printf("Enter an operator(+,-,*,/):");
scanf("%c",&operator);
printf("enter two operands:");
scanf("%lf %lf",&num1,&num2);

switch (operator){
    
    case'+':
    result=num1+num2;
    printf("Result:%.2lf\n",result);
    break;
    
    
    case'-':
    result=num1-num2;
    printf("Result:%.2lf\n",result);
    break;
    
    case'/':
    if(num2!=0){
       result= num1/num2;
    }
    else{
    printf("not divisible by Zero");
    }
       
    case'*':
    result=num1*num2;
    printf("Result:%.2lf\n",result);
    break;
       
    default:
    printf("invalid operator");
    break;
   }
    


    return 0;
}
